{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", // <--- Ensure this is ESNext or similar (e.g., ES2020, NodeNext)
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    //"declaration": true,
    //"sourceMap": true,
    "moduleResolution": "bundler" // <--- Often recommended for ESM projects
    // or "node" if you have specific reasons
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}